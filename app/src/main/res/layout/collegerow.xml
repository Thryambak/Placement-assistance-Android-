<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/collegeRowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/parentNoPlaced"
        android:layout_width="169dp"
        android:layout_height="50dp"


        android:layout_below="@+id/parentYear"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/Circuit1"
        android:background="@drawable/text_black"
        android:text="No of students placed"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/BranchName1"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/text_black"
        android:gravity="center"
        android:text="This is Branch Name"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/Circuit1"
        android:layout_width="169dp"
        android:layout_height="50dp"
        android:layout_below="@+id/BranchName1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/text_black"
        android:gravity="center"
        android:text="Circuit"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/parentYear"
        android:layout_width="169dp"
        android:layout_height="50dp"
        android:layout_below="@+id/BranchName1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/text_black"
        android:gravity="center"
        android:text="Years"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/Avgpkg1"
        android:layout_width="169dp"
        android:layout_height="50dp"
        android:layout_below="@+id/BranchName1"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"

        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@+id/Circuit1"
        android:background="@drawable/text_black"
        android:text="AvgPkg"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RinR"
        android:layout_width="217dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/Avgpkg1"
        android:layout_marginStart="194dp"
        android:layout_marginTop="70dp"
        android:nestedScrollingEnabled="false" />

</RelativeLayout>