<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <Button
        android:id="@+id/buttonAddVisit"
        android:layout_width="126dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_button"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/avgpkg"
        android:layout_width="159dp"
        android:layout_height="49dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="176dp"
        android:layout_toRightOf="@+id/year"
        android:hint="Average Package"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textColorLink="#0B0A0A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/year"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/year"
        android:layout_width="100dp"

        android:layout_height="50dp"
        android:layout_marginTop="176dp"
        android:drawableStart="@drawable/ic_baseline_date_range_24"

        android:hint="Year"
        android:inputType="number"
        android:maxLength="4"
        android:shadowColor="#FFEFEF"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#000000"
        android:textColorLink="#F8F5F5"
        app:layout_constraintEnd_toStartOf="@+id/avgpkg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/noSelected"
        android:layout_width="222dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:hint="No of placed students"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#040404"
        android:textColorLink="#090808"
        app:layout_constraintBottom_toTopOf="@+id/buttonAddVisit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/year"
        app:layout_constraintVertical_bias="0.041" />

    <Spinner
        android:id="@+id/CompanySpinner"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_margin="8dp"

        android:background="@drawable/for_spinners"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/BranchSpinner"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_margin="8dp"
        android:background="@drawable/for_spinners"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/year"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CompanySpinner" />


</androidx.constraintlayout.widget.ConstraintLayout>